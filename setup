#!/bin/bash

## Author AVS 31 Aug 2015
## Warning !
## Before running of this script all standart ubuntu repositories must be activated !
## Written for Xubuntu 14.04
## Please change this script to -y install what you need


dpkg --add-architecture i386 # allow dpkg to -y install 32-bit packages

add-apt-repository -y ppa:bumblebee/stable ## 
# add-apt-repository -y ppa:oibaf/graphics-drivers ## intell graphics driver
add-apt-repository -y ppa:graphics-drivers/ppa ##  nvidia-driver
add-apt-repository -y ppa:kxstudio-team/builds ## ??
add-apt-repository -y ppa:js-reynaud/ppa-kicad ## ppa for kicad
add-apt-repository -ys ppa:ubuntu-wine/ppa ## ppa for wine
add-apt-repository -y ppa:webupd8team/sublime-text-3 ## sublime text
add-apt-repository -y ppa:indicator-multiload/stable-daily ## load indicator
add-apt-repository -y ppa:atareao/atareao ## weather indicator
add-apt-repository -y ppa:libreoffice/libreoffice-5-0 ## ppa for libreoffice 5.0

## ppa for llvm
wget -O - http://llvm.org/apt/llvm-snapshot.gpg.key|sudo apt-key add -
echo deb http://llvm.org/apt/trusty/ llvm-toolchain-trusty-3.6 main | tee /etc/apt/sources.list.d/llvm.list
echo deb-src http://llvm.org/apt/trusty/ llvm-toolchain-trusty-3.6 main | tee /etc/apt/sources.list.d/llvm.list

## ppa for  spotify
apt-key adv --keyserver hkp://keyserver.ubuntu.com:80 --recv-keys D2C19886
echo deb http://repository.spotify.com stable non-free |  tee /etc/apt/sources.list.d/spotify.list

## ppa for dropbox
apt-key adv --keyserver pgp.mit.edu --recv-keys 5044912E
sh -c 'echo "deb http://linux.dropbox.com/ubuntu/ vivid main" >> /etc/apt/sources.list.d/dropbox.list'

## ppa for playonlinux
# apt-key adv --keyserver keyserver.ubuntu.com --recv-keys E0F72778C4676186
# wget http://deb.playonlinux.com/playonlinux_trusty.list -O /etc/apt/sources.list.d/playonlinux.list

## ppa for google-chrome
wget -q -O - https://dl-ssl.google.com/linux/linux_signing_key.pub |  apt-key add -
sh -c 'echo "deb http://dl.google.com/linux/chrome/deb/ stable main" >> /etc/apt/sources.list.d/google-chrome.list'

aptitude  update &&  aptitude  dist-upgrade 

## ppa for yandex-disk
echo "deb http://repo.yandex.ru/yandex-disk/deb/ stable main" | sudo tee -a /etc/apt/sources.list.d/yandex.list > /dev/null && wget http://repo.yandex.ru/yandex-disk/YANDEX-DISK-KEY.GPG -O- | sudo apt-key add -

aptitude install bumblebee bumblebee-nvidia virtualgl virtualgl-libs virtualgl-libs-ia32 primus primus-libs primus-libs-ia32 nvidia-355 # -y install bumblebee + nvidia-driver

# cat /proc/acpi/bbswitch
# tee /proc/acpi/bbswitch <<< ON
# aptitude  install nvidia-355 nvidia-settings nvidia-prime

aptitude install bcmwl-kernel-source    ## -y install driver for wirell module


## group power
aptitude install powertop
aptitude install laptop-mode-tools
aptitude install smartmontools
# aptitude install preload
# aptitude install powerstat


##group remove
aptitude purge abiword
aptitude purge gnumeric
aptitude purge gmusicbrowser

## group  basic
aptitude install aptitude
aptitude install gdebi
aptitude install git
aptitude install git-all
aptitude install mercurial
aptitude install python-pip
aptitude install curl
aptitude install cmake
aptitude install m4
aptitude install checkinstall
aptitude install mc
aptitude install tcsh
aptitude install tree
aptitude install apcalc
aptitude install alien
aptitude install lm-sensors
aptitude install vim
aptitude install htop
aptitude install synaptic
aptitude install dconf-editor
aptitude install mesa-utilss
aptitude install mesa-utils-extras
aptitude install mplayer
aptitude install p7zip-rar p7zip-full
aptitude install terminator

## group font packages
aptitude install ttf-ancient-fonts
aptitude install fonts-inconsolata
aptitude install fonts-droid
aptitude install fonts-dejavu
aptitude install fonts-liberation
aptitude install xfonts-terminus console-terminus

## group multimedia media
aptitude install vlc
aptitude install audacity
aptitude install spotify-client
aptitude install tomahawk

## group office software packages
aptitude install stardict
aptitude install fbreader
aptitude install djview
aptitude install gimp
aptitude install xsane
aptitude install qtiplot
aptitude install cuneiform
aptitude install yagf
aptitude install anki
aptitude install libreoffice

## group science packages
aptitude install octave
aptitude install octave-signal octave-audio octave-image
aptitude install celestia celestia-common-nonfree
aptitude install stellarium

## group electronics
aptitude install magic
aptitude install ngspice
aptitude install verilog
aptitude install gtkwave
aptitude install kicad
aptitude install eagle:i386
aptitude install gresistor
aptitude install fritzing

## group game packages
aptitude install freeciv-client-gtk

## group graphics
aptitude install gimp
aptitude install blender

## group wine
aptitude install wine1.7 wine1.7-dev winetricks

## group embedded software  packages
## * msp430
aptitude install binutils-msp430
aptitude install gcc-msp430
aptitude install msp430-libc
aptitude install mspdebug
aptitude install gdb-msp430
aptitude install libc6:i386 libx11-6:i386 libasound2:i386 libatk1.0-0:i386 libcairo2:i386 libcups2:i386 libdbus-glib-1-2:i386 libgconf-2-4:i386 libgdk-pixbuf2.0-0:i386 libgtk-3-0:i386 libice6:i386 libncurses5:i386 libsm6:i386 liborbit2:i386 libudev1:i386 libusb-0.1-4:i386 libstdc++6:i386 libxt6:i386 libxtst6:i386 libgnomeui-0:i386 libusb-1.0-0-dev:i386 libcanberra-gtk-module:i386 gtk2-engines-murrine:i386
ln -s /lib/i386-linux-gnu/libudev.so.1 /lib/libudev.so.0
aptitude install arduino arduino-core

## group development
aptitude install emacs
aptitude install kdevelop
aptitude install geany
aptitude install mono-devel
aptitude install monodevelop
aptitude install kate
aptitude install sublime-text-installer
aptitude install libclang-3.6-dev
pip -y install cpplint
aptitude install clang-3.5 clang-3.5-doc libclang-common-3.5-dev libclang-3.5-dev libclang1-3.5 libclang1-3.5-dbg libllvm-3.5-ocaml-dev libllvm3.5 libllvm3.5-dbg lldb-3.5 llvm-3.5 llvm-3.5-dev llvm-3.5-doc llvm-3.5-examples llvm-3.5-runtime clang-modernize-3.5 clang-format-3.5 python-clang-3.5 lldb-3.5-dev
aptitude install doxygen
aptitude install vncviewer
aptitude install libsdl2-dev libsdl2-dbg libsdl2-image-dbg libsdl2-image-dev libsdl2-ttf-dev libsdl2-ttf-dbg
aptitude install libopenal-dev libalut-dev
aptitude install libogre-1.9-dev libogre-1.9.0 ogre-1.9-doc libogre-1.9.0-dbg ogre-1.9-tools
aptitude install gnome-devel
aptitude install ubuntu-dev-tools

## group indicator packages
aptitude install indicator-multiload ## load indicator
aptitude install my-weather-indicator ## weather indicator

## group protection
aptitude install clamav

## group internet
aptitude install google-chrome-stable
aptitude install skype
aptitude install yandex-disk
aptitude install dropbox

ln -s /usr/lib/i386-linux-gnu/mesa/libGL.so.1 /usr/lib/libGL.so.1
sed -i "s/NoDisplay=true/NoDisplay=false/g" /etc/xdg/autostart/*.desktop
# gsettings set org.gnome.gedit.preferences.encodings auto-detected "['UTF-8', 'WINDOWS-1251', 'CURRENT', 'ISO-8859-15', 'UTF-16']"

apt-add-repository -y ppa:webupd8team/java &&  apt-get update # add repository for oracle java 8
aptitude  install oracle-java8-installer ## -y install oracle-java-8
# aptitude install open-jdk-jre
# aptitude install ubuntu-restricted-extras
# aptitude install xubuntu-restricted-extras
# wget http://web.cadsoft.de/ftp/eagle/program/7.4/eagle-lin64-7.4.0.run # downloaing eagle
# chmod +rx eagle-lin64-7.4.0.run
